<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorPrimaryDark"
    app:popupTheme="@style/Theme.AppCompat.Light"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:id="@+id/toolbar"
    android:padding="@dimen/paddingTolbar"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:src="@drawable/ic_icon"
            android:layout_marginLeft="20dp"
            android:layout_width="@dimen/imagenLogo"
            android:layout_height="@dimen/imagenLogo">
        </ImageView>
        <TextView
            android:id="@+id/titulo_toolbar"
            android:text="SHOPPING"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/separador"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>



</androidx.appcompat.widget.Toolbar>

<!-- appNs: para obtener los recursos de la variable app -->
<!-- app: para obtener los 3 puntitos de opciones -->
